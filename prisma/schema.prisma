generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MessageRole {
  user
  system
}

model User {
  id        String    @id @default(uuid())
  name      String
  phoneE164 String    @unique
  tz        String    @default("Asia/Jakarta")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]

  @@map("users")
}

model Message {
  id          String @id @default(uuid())
  phoneNumber String

  role      MessageRole
  content   String
  meta      Json?
  createdAt DateTime    @default(now())

  user User? @relation(fields: [phoneNumber], references: [phoneE164])

  @@map("messages")
}
