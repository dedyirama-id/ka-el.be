generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MessageRole {
  user
  system
}

enum ChatType {
  personal
  group
}

enum UserRole {
  user
  admin
}

model User {
  id          String    @id @default(uuid())
  name        String
  role        UserRole  @default(user)
  phoneE164   String    @unique
  tz          String    @default("Asia/Jakarta")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  profile     String?
  isLoggedIn  Boolean   @default(true)
  deleteToken String?   @unique
  tags        UserTag[]
  messages    Message[]

  @@map("users")
}

model Message {
  id          String @id @default(uuid())
  phoneNumber String

  role      MessageRole
  content   String
  meta      Json?
  createdAt DateTime    @default(now())

  user User? @relation(fields: [phoneNumber], references: [phoneE164], onDelete: Cascade, onUpdate: Cascade)

  @@map("messages")
}

model Event {
  id             Int        @id @default(autoincrement())
  title          String
  slug           String     @unique
  description    String?
  organizer      String
  startDate      DateTime
  endDate        DateTime
  url            String?
  priceMin       Float
  priceMax       Float
  hasCertificate Boolean    @default(false)
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt
  raw            String?
  tags           EventTag[]

  @@unique([slug, organizer])
  @@map("events")
}

model Tag {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique

  events EventTag[]
  users  UserTag[]

  @@map("tags")
}

model EventTag {
  eventId Int
  tagId   Int

  event Event @relation(fields: [eventId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tag   Tag   @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([eventId, tagId])
  @@map("event_tags")
}

model UserTag {
  userId String
  tagId  Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tag  Tag  @relation(fields: [tagId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@id([userId, tagId])
  @@map("user_tags")
}
